# coding: UTF-8

task :app_install

require 'net/http'
Net::HTTP.start('t-tutiya.github.io') do |http|
  res = http.get('/tsukasa/ayame.so')
  open('C:\Ruby22\lib\ruby\site_ruby\2.2.0\i386-msvcrt\ayame.so', 'wb'){|f|
    f.write(res.body)
  }
end
Net::HTTP.start('t-tutiya.github.io') do |http|
  res = http.get('/tsukasa/Ayame.dll')
  open('C:\Ruby22\lib\ruby\site_ruby\2.2.0\i386-msvcrt\Ayame.dll', 'wb'){|f|
#  open('C:\projects\tsukasa\Ayame.dll', 'wb'){|f|
    f.write(res.body)
  }
end

task :test

require 'rake/testtask'

Rake::TestTask.new do |test|
  # $LOAD_PATH に追加するパス (デフォルトで 'lib' は入っている)
  test.libs << 'test'
  # テスト対象ファイルの指定
  test.test_files = Dir[ 'test/**/test_*.rb' ]
  test.verbose = true
end

task :spec

require "rspec/core/rake_task"
RSpec::Core::RakeTask.new("spec")

